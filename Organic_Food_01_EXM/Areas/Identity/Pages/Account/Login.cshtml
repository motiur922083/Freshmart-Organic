@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";

    Layout = "~/Areas/Identity/Views/Shared/_Layout.cshtml";
}


    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section"><a asp-area="Shopper" asp-controller="Home" asp-action="Index"><img src="~/Freshmart-Organic/img/logo.png" /></a></h2>
                </div>
            </div>

            <div class="row justify-content-center">
                <div class="col-md-7 col-lg-5">
                    <div class="login-wrap p-4 p-md-5">
                        <div class="d-flex">
                            <div class="w-100">
                                <h3 class="mb-4">Sign In</h3>
                            </div>
                            <div class="w-100">
                                <p class="social-media d-flex justify-content-end">
                                    <a href="#" class="social-icon d-flex align-items-center justify-content-center"><span class="fa fa-facebook"></span></a>
                                    <a href="#" class="social-icon d-flex align-items-center justify-content-center"><span class="fa fa-twitter"></span></a>
                                </p>
                            </div>
                        </div>
                        <form id="account" method="post" class="login-form">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group">
                                <div class="icon d-flex align-items-center justify-content-center"><span class="fa fa-user"></span></div>
                                <input asp-for="Input.Email" class="form-control rounded-left" placeholder="Email" required>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <div class="icon d-flex align-items-center justify-content-center"><span class="fa fa-lock"></span></div>
                                <input asp-for="Input.Password" class="form-control rounded-left" placeholder="Password" required>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="form-group d-flex align-items-center">
                                <div class="checkbox w-100">
                                    <label asp-for="Input.RememberMe" class="checkbox-primary mb-0">
                                        <input asp-for="Input.RememberMe" />
                                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                                    </label>
                                </div>
                                <div class="w-100 d-flex justify-content-end">
                                    <button type="submit" class="btn btn-primary rounded submit">Login</button>
                                </div>
                            </div>
                            <div class="form-group mt-4">
                                <div class="w-100 text-center">
                                    <p class="mb-1">Don't have an account? <a asp-area="Identity" asp-controller="Register" asp-action="Register">Sign Up</a></p>
                                    <p><a id="forgot-password" asp-area="Identity" asp-page="./ForgotPassword">Forgot Password</a></p>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>


        </div>
    </section>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
