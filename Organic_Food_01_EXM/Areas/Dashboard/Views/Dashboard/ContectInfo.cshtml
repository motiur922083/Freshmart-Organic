@model IEnumerable<Organic_Food_01_EXM.Models.ContactInfo>
@{
    ViewData["Title"] = "ContectInfo";

    int serialNumber = 0;
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="active-member">
                    <div class="table-responsive">
                        <table class="table table-xs mb-0">
                            <thead>
                                <tr>
                                    <th>NO</th>
                                    <th>@Html.DisplayNameFor(x => x.CustomerName)</th>
                                    <th>@Html.DisplayNameFor(x => x.EmailAddress)</th>
                                    <th>@Html.DisplayNameFor(x => x.Subject)</th>
                                    <th>@Html.DisplayNameFor(x => x.Message)</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model)
                                {
                                    serialNumber = serialNumber + 1;
                                    <tr>
                                        <td>
                                            @serialNumber
                                        </td>
                                        <td>@Html.DisplayFor(x => item.CustomerName)</td>
                                        <td>@Html.DisplayFor(x => item.EmailAddress)</td>
                                        <td>@Html.DisplayFor(x => item.Subject)</td>
                                        <td>@Html.DisplayFor(x => item.Message)</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>