
@model Organic_Food_01_EXM.Models.Products
@{
    ViewData["Title"] = "Create";
}

<h2 class="text-info">Add New Product</h2>

<!--Success && Delete Dialog Start-->
@if (ViewBag.message != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        <strong> @ViewBag.message</strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<form asp-action="Create" method="post" enctype="multipart/form-data">

    <div class="p-3 rounded border">
        <div asp-validation-summary="ModelOnly"></div>
        @*<div class="form-group row">
            <div class="col-2">
                <label asp-for="Category" class="control-label"></label>
            </div>
            <div class="col-5">
                <select asp-for="Category" class="form-control">
                    <option class="bg-success">--Select Item--</option>
                    <option value="Vegetable">Vegetables</option>
                    <option value="Fruit">Fruits</option>
                    <option value="Bread">Bread</option>
                    <option value="Juice">Juices</option>
                    <option value="TeaCoffee">Tea & Coffee</option>
                    <option value="Tomato">Tomato</option>
                    <option value="Broccoli">Broccoli</option>
                </select>
            </div>
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>*@
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ProductTitle"></label>
            </div>
            <div class="col-5">
                <input asp-for="ProductTitle" class="form-control" placeholder="Product Title"/>
            </div>
            <span asp-validation-for="ProductTitle" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ProductPrice"></label>
            </div>
            <div class="col-5">
                <input asp-for="ProductPrice" class="form-control" placeholder="Price"/>
            </div>
            <span asp-validation-for="ProductPrice" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ProductAskPrice"></label>
            </div>
            <div class="col-5">
                <input asp-for="ProductAskPrice" class="form-control"placeholder="Ask Price" />
            </div>
            <span asp-validation-for="ProductAskPrice" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ProductDetails"></label>
            </div>
            <div class="col-5">
                <textarea rows="4" type="text" asp-for="ProductDetails" class="form-control" placeholder="Write something....."></textarea>
            </div>
            <span asp-validation-for="ProductDetails" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Image"></label>
            </div>
            <div class="col-5">
                <input asp-for="Image" type="file" class="form-control" placeholder="Image Uploade"/>
            </div>
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ProductColor" class="control-label"></label>
            </div>
            <div class="col-5">
                <select asp-for="ProductColor" class="form-control">
                    <option value="Pink" style="color: #f780c0;"> Pink</option>
                    <option value="Blue" style="color: #219dc6; ">Blue</option>
                    <option value="Yellow" style="color: #f1ef3a;">Yellow</option>
                    <option value="Green" style="color: #82cb55;">Green</option>
                    <option value="Brown" style="color: #7a4040;">Brown</option>
                    <option value=" Red" style="color: #f15c3a;">Red</option>
                </select>
            </div>
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Date"></label>
            </div>
            <div class="col-5">
                <input asp-for="Date" class="form-control" placeholder="Date & Time"/>
            </div>
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="CategoryId"></label>
            </div>
            <div class="col-5">
                <select asp-for="CategoryId" asp-items="ViewBag.categoryId" class="form-control"></select>
                @*<input asp-for="SpecialTagId" class="form-control" />*@
            </div>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="TagId"></label>
            </div>
            <div class="col-5">
                <select asp-for="TagId" asp-items="ViewBag.tagId" class="form-control"></select>
                @*<input asp-for="ProductTypeId" class="form-control" />*@
            </div>
            <span asp-validation-for="TagId" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="IsAvailable"></label>
            </div>
            <div class="col-5">
                <input asp-for="IsAvailable" class="" type="checkbox" />
            </div>
            <span asp-validation-for="IsAvailable" class="text-danger"></span>
        </div>
        <div class="form-group row offset-2">
            <input type="submit" class="btn btn-primary mr-2" value="Save" />
            <a asp-action="Index" class="btn btn-success">Back To List</a>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
