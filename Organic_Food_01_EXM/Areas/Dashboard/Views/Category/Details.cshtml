@model Organic_Food_01_EXM.Models.Category
@{
    ViewData["Title"] = "Details";
}

<h2 class="text-info">Details product category</h2>

<form asp-action="Details" method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <div class="col-2">
            <label asp-for="CategoryName"></label>
        </div>
        <div class="col-5">
            <input asp-for="CategoryName" readonly="readonly" class="form-control" />
        </div>
        <span asp-validation-for="CategoryName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <a asp-action="Edit" class="btn btn-success" asp-route-id="@Model.Id"><i class="fa fa-edit"> Edit</i></a>
        <a asp-action="Index" asp-controller="ProductTypes" class="btn btn-success">Back To List</a>
    </div>
</form>
@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}