@model IEnumerable<Organic_Food_01_EXM.Models.Category>
@{
    ViewData["Title"] = "Index";
}

<br />
<br />

<div class="row">
    <div class="col-6">
        <h2 class="text-info">Product List</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-primary"><i class="fa fa-plus"></i>Product Category List</a>
    </div>
</div>
<br />


<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="active-member">
                    <div class="table-responsive">
                        <table class="table table-xs mb-0">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(x => x.CategoryName)</th>
                                    <th class="text-center">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>@Html.DisplayFor(x => item.CategoryName)</td>
                                    <td class="text-center" style="width:150px">
                                        <partial name="_ButtonPartialView" model="@item.Id">
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script type="text/javascript">

        $(function () {
            var save = '@TempData["save"]'
            if (save != '') {
                alertify.set('notifier', 'position', 'top-right');
                alertify.success(save);
            }
            var edit = '@TempData["edit"]'
            if (edit != '') {
                alertify.set('notifier', 'position', 'top-right');
                alertify.success(edit);
            }
            var delet = '@TempData["delete"]'
            if (delet != '') {
                alertify.set('notifier', 'position', 'top-right');
                alertify.success(delet);
            }
        });
    </script>
}
