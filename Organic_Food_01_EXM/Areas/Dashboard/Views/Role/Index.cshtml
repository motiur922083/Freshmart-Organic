@{
    ViewData["Title"] = "Index";
}

<!---------------------------Role Controller-------------------------->
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Role List</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-primary"><i class="fa fa-plus"></i> New Role</a>
    </div>
</div>
<br />

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="active-member">
                    <div class="table-responsive">
                        <table class="table table-xs mb-0">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th class="text-center">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in ViewBag.Roles)
                                {
                                    <tr>
                                        <td>@item.Name</td>
                                        <td class="text-center" style="width:150px">
                                            <div class="btn-group">
                                                <a asp-action="Edit" class="btn btn-success" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a>
                                                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id"><i class="fa fa-trash-o"></i></a>
                                            </div>
                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>


    <script type="text/javascript">
        $(function () {
            var save = '@TempData["save"]'
            if (save != '') {
                alertify.set('notifier', 'position', 'top-right');
                alertify.success(save);
            }
            var delt = '@TempData["delete"]'
            if (delt != '') {
                alertify.set('notifier', 'position', 'top-right');
                alertify.error(delt);
            }
        });
    </script>
}