@model List<Organic_Food_01_EXM.Models.Products>
@{
    ViewData["Title"] = "Card";
}

<!-- Shoping Cart Section Begin -->
<section class="shoping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="shoping__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th class="shoping__product">Products</th>
                                <th>Title</th>
                                <th>Quantity</th>
                                <th>Total</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="shoping__cart__item">
                                        <img style="width:120px;height:120px;overflow:hidden;" src="~/@item.Image" alt="Product">
                                        <h5>@item.ProductTitle</h5>
                                    </td>
                                    <td class="shoping__cart__price">
                                        @item.ProductTitle
                                    </td>
                                    <td class="shoping__cart__quantity">
                                        <div class="quantity">
                                            <div class="pro-qty">
                                                <input type="text" value="1">
                                            </div>
                                        </div>
                                    </td>
                                    <td class="shoping__cart__total">
                                        @item.ProductPrice
                                    </td>
                                    <td class="shoping__cart__item__close">
                                        <a asp-action="Remove" asp-controller="Home" asp-route-id="@item.Id">
                                            <span class="icon_close"></span>
                                        </a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="shoping__cart__btns">
                    <a class="primary-btn cart-btn" asp-area="Shopper" asp-controller="Home" asp-action="Product">CONTINUE SHOPPING</a>
                    <a asp-area="Shopper" asp-controller="Home" asp-action="Product" class="primary-btn cart-btn cart-btn-right">
                        <span class="icon_loading"></span>
                        Upadate Cart
                    </a>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="shoping__continue">
                    <div class="shoping__discount">
                        <h5>Discount Codes</h5>
                        <form action="#">
                            <input type="text" placeholder="Enter your coupon code">
                            <button type="submit" class="site-btn">APPLY COUPON</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="shoping__checkout">
                    <h5>Cart Total</h5>
                    <ul>
                        <li>Total <span>@Model.Sum(c => c.ProductPrice)</span></li>
                    </ul>
                    <a class="primary-btn" asp-area="Shopper" asp-action="CheckOut" asp-controller="Order">PROCEED TO CHECKOUT</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Shoping Cart Section End -->